<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lyckan.moviles.udb.answers.MainActivity"
    android:orientation="vertical"
    android:weightSum="10">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:id="@+id/FrgQuestions"
        class="com.lyckan.moviles.udb.answers.QuestionsFragment"
        />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:id="@+id/FgrAnimation"
        class="com.lyckan.moviles.udb.answers.CanvasFragment"
        />


</LinearLayout>