<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="com.lyckan.moviles.udb.answers.MainActivity">


    <fragment
        android:id="@+id/FrgQuestions"
        class="com.lyckan.moviles.udb.answers.QuestionsFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8" />

    <fragment
        android:id="@+id/FgrAnimation"
        class="com.lyckan.moviles.udb.answers.CanvasFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />
</LinearLayout>
